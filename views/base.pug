doctype html
html
  head

    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")


    link(rel="icon" href="#" sizes="16x16 32x32" type="image/png")


    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/components-font-awesome@5.0.6/css/fontawesome-all.min.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-social@5.1.1/bootstrap-social.min.css')
    link(rel='stylesheet' href='/css/style.css')
    block header
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='/') 
        ="website"
        b
          ="Name"
      


      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
        
      ul.navbar-nav.mr-auto
      ul.navbar-nav.navbar-right
        if user
          
          
          li.nav-item
            a.nav-link(href="/users/profile/"+user.username) #{user.username}  
          li.nav-item
            a.nav-link(href="/users/logout") Logout
        else 
          li.nav-item
            a.nav-link(href="/users/login") Login
          

    .container-fluid
      .row
        .col-md-12.col-xs-18.col-sm-12.mx-auto(align="center")
          h6 -
      div(class="alert alert_placeholder")
        != messages('message', locals)
      if errors 
        each error, i in errors
          div( class="alert_placeholder alert alert-danger") #{error.msg}
      if(!mobile)  
        .row
          .col-md-1.col-xs-2.col-sm-1
            h6 -
          .col-md-10.col-xs-15.col-sm-10
            block content
            br
            hr
          .col-md-1.col-xs-2.col-sm-1
            h6 -
      else
        block content
    .row
      .col-md-12.col-xs-18.col-sm-12.mx-auto(align="center")
        h6 -
    footer.footer-basic-centered
      h6.footer-company-motto websiteName

      p.footer-links
        a(href='/policy') Privacy Policy
        | 				·
        a(href='/terms') Terms of Use
        | 				·
        a( id="toggleContact" href='#') Contact
        br
        h6( id="contactEmail" style="color:#FFFFFF;") Contact : websiteName@email.com
      p.footer-company-name websiteName © 2018


    script( src='https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js')
    script( src='https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/js/bootstrap.min.js')
    script( src='/js/main-min.js')